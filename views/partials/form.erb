<form class="" action="/<%= @book.id %>" method="POST">
    <div>
        <div><label>Title: </label></div>
        <div><input type="text" value="<%= @book.title %>" name="title" placeholder="Enter title"></div>
    </div>
    <div>
        <div><label>Title: </label></div>
        <div><input type="text" value="<%= @book.author %>" name="author" placeholder="Enter author"></div>
    </div>
    <div>
        <div><label>Description: </label></div>
        <div><textarea name="description" rows="8" cols="80" placeholder="Enter the description of the book"><%= @book.description %></textarea></div>
    </div>
    <div>
        <% if (@book.id) %>
            <input type="hidden" name="_method" value="PUT">
        <% end %>
        <input type="submit" value="Save Book">
    </div>
</form>

